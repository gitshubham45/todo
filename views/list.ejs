<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%=listTitle %> </h1>
    </div>
    

    <form  class="item box main" action="/" method="post" >
        <input  id="myInput" autocomplete="off" placeholder="New item" type="text" name="newItem" >
        <button  class="add-btn" type="submit" name="list" value="<%=listTitle%>" >+</button>
    </form>

  

    <div id="bigBox" class="box">

        <% newListItems.forEach((item)=> { %>

            
                <div id="<%= item._id %>bb" class="item">
                    <input type="checkbox"  >
                    <p > <%= item.name %> </p>
                    <i  name="<%=listTitle%>" id="<%= item._id %>" class="fa-solid fa-trash delete-btn"></i>
                </div>

           
         <% }); %>

        

    </div>
    

    <%- include("footer") -%>
    

